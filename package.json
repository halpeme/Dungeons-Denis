{
  "name": "dungeon-bridge",
  "version": "1.0.0",
  "description": "In-person D&D companion - fog of war dungeon maps with GM control",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/tray/wrapper.ts",
    "dev:server": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "download-maps": "node scripts/download-maps.js",
    "tray": "node dist/tray/wrapper.js",
    "tray:dev": "tsx src/tray/wrapper.ts",
    "build:tray": "npm run build && node -e \"require('fs').cpSync('src/tray/icon.ico', 'dist/tray/icon.ico', {recursive: true})\"",
    "create-icon": "node scripts/create-icon.js",
    "build:dist": "node scripts/build-dist.js"
  },
  "keywords": [
    "dnd",
    "dungeon",
    "tabletop",
    "rpg",
    "fog-of-war"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.0.0",
    "@fastify/websocket": "^11.0.0",
    "better-sqlite3": "^11.0.0",
    "fastify": "^5.0.0",
    "nanoid": "^5.0.0",
    "systray2": "^2.1.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
